{% extends 'admin.html.twig' %}

{% block title %}Musee!{% endblock %}

{% block body %}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Nouvelle image</h2>
    
    </header>

    
        
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    
                    <div class="panel-body">
                        <form class="form-horizontal form-bordered form-bordered"  method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="textareaDefault">Titre</label>
                                <div class="col-md-6">
                                    <input class="form-control" name="titre"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="textareaDefault">Description</label>
                                <div class="col-md-6">
                                    <textarea class="form-control" rows="3" name="description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="textareaDefault">Image</label>
                                <div class="col-md-6">
                                 <input type="file"  class="form-control"  name="file"></input>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary ">Enrgistrer</button>

                        </form>
                    </div>
                </section>
            </div>
        </div>
        
        
</section>
{% endblock %}
